@using FishingStore.Common
@model FishingStore.Web.ViewModels.Reel.ReelDetailsViewModel

@{
    ViewData["Title"] = "Reel Details";
}

<h2>Reel Details</h2>

<div class="reel-detail">
    <h3>@Model.Brand - @Model.Model</h3>

    <div class="reel-info">
        <p><strong>Brand:</strong> @Model.Brand</p>
        <p><strong>Model:</strong> @Model.Model</p>
        <p><strong>Reel Size:</strong> @Model.ReelSize</p>
        <p><strong>Spool Capacity:</strong> @Model.SpoolCapacity m</p>
        <p><strong>Fishing Type:</strong> @Model.FishingType</p>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Price:</strong> @Model.Price.ToString("C")</p>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="image-container">
                <img src="@Model.ImageUrl" alt="@Model.Brand @Model.Model" style="max-width: 100%; max-height: 300px;" />
            </div>
        }
        else
        {
            <div class="image-container">
                <img src="@EntityValidationConstants.Reel.NoImgReelUrl" alt="No image found!" style="max-width: 100%; max-height: 300px;" />
            </div>
        }
    </div>

    <div class="action-buttons">
        <a href="@Url.Action("Edit", "Reel", new { id = Model.Guid })" class="btn btn-primary">Edit</a>
        <a href="@Url.Action("Index", "Reel")" class="btn btn-secondary">Back to List</a>
    </div>
</div>