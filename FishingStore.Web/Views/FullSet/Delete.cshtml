@model FishingStore.Web.ViewModels.FullSet.FullSetIndexViewModel

@{
    ViewData["Title"] = "Delete Full Set";
}

<h1>Delete Full Set</h1>

<div>
    <h3>Are you sure you want to delete this full set?</h3>
    <dl class="dl-horizontal">
        <dt>User</dt>
        <dd>@Model.UserName</dd>
        <dt>Rod</dt>
        <dd>@Model.RodBrand @Model.RodModel</dd>
        <dt>Reel</dt>
        <dd>@Model.ReelBrand @Model.ReelModel</dd>
        <dt>Line</dt>
        <dd>@Model.LineBrand @Model.LineModel</dd>
        <dt>Hook</dt>
        <dd>@Model.HookBrand @Model.HookModel</dd>
        <dt>Total Price</dt>
        <dd>@Model.TotalPrice.ToString("C")</dd>
        <dt>Discounted Price</dt>
        <dd>@Model.DiscountedPrice.ToString("C")</dd>
    </dl>
    
    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="@Url.Action("Index", "FullSet")" class="btn btn-default">Cancel</a>
    </form>
</div>